<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="create_client_container"
            stylesheets="@../../Styles/CreateClient.css" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.bankingjavafx.Controllers.admin.CreateClientController">
   <Text layoutX="52.0" layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create new client account"
         AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0"/>
   <VBox fillWidth="false" layoutX="14.0" layoutY="41.0" prefHeight="700.0" prefWidth="600.0"
         AnchorPane.leftAnchor="14.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="create_client_container" text="First Name"/>
      <TextField fx:id="fname_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name"/>
      <TextField fx:id="lname_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password"/>
      <PasswordField fx:id="pwd_fld"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Payee Address"/>
      <CheckBox fx:id="payee_check_box" mnemonicParsing="false"/>
      <Label fx:id="payee_addr_lbl" styleClass="payee_address_lbl" text="Payee Address"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Accounts:"/>
      <CheckBox fx:id="ch_acc_chkbox" mnemonicParsing="false" text="Add Checking Account"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Checking Account Balance"/>
      <TextField fx:id="ch_acc_bal_fld"/>
      <CheckBox fx:id="sv_acc_fld" mnemonicParsing="false" text="Add Savings Account"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Savings Account Balance"/>
      <TextField fx:id="sv_acc_bal_fld"/>
      <Button fx:id="create_client_btn" mnemonicParsing="false" text="Create New Client"/>
      <Label fx:id="error_lbl" styleClass="error_lbl" text="error:"/>
   </VBox>
</AnchorPane>
